<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".ui.fragments.DashboardFragment">

  <androidx.core.widget.NestedScrollView
      android:id="@+id/s"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="3"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:text="Hey Tamara"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="13dp"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/poppins_semibold"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/todayStat"
                android:layout_width="wrap_content"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_below="@+id/header"
                android:layout_marginStart="13dp"
                android:text="Today You Have 12 test"
                android:fontFamily="@font/poppins_semibold"
                android:layout_height="wrap_content"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="40dp"
                android:id="@+id/add"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="13dp"
                app:cardBackgroundColor="#EE2375"
                android:layout_height="40dp">


                <ImageView
                    android:background="@drawable/ic_baseline_add_24"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/counterCotianer"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="end"
                android:weightSum="6"
                android:layout_below="@+id/todayStat"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/all_task_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="13"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="tasks created"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/textClo"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="10dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/left_today_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="13"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="tasks left"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/textClo"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/counterCotianer"
                android:layout_width="match_parent"
                android:weightSum="4"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="2dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="3.2"
                    android:background="@color/hor_line"/>
            </LinearLayout>



        </RelativeLayout>

        <LinearLayout
            android:paddingStart="40dp"
            xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:id="@+id/categoryList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/task_list"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>


  </androidx.core.widget.NestedScrollView>

</FrameLayout>
